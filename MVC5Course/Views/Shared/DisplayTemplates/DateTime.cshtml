@model DateTime?
@using System.Globalization

@if (Model.HasValue)
{
    var taiwanCalender = new TaiwanCalendar();
    var datetime = "";
    if (Model.Value.Year >= 1912)
    {
        datetime = string.Format("民國{0}年{1}月{2}日", taiwanCalender.GetYear(Model.Value), Model.Value.Month, Model.Value.Day);
    }
    else
    {
        datetime = string.Format("民國前{0}年{1}月{2}日", 1912 - Model.Value.Year, Model.Value.Month, Model.Value.Day);
    }

    @Html.Label(datetime)
}
else
{
    @Html.Label("", null, new { @class = "form-control" })
} 